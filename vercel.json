{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/webhook/stripe", "dest": "/app.py", "methods": ["POST"] },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/_vercel/insights/script.js", "dest": "/_vercel/insights/script.js" },
    { "src": "/_vercel/speed-insights/script.js", "dest": "/_vercel/speed-insights/script.js" },
    { "src": "/(.*)", "dest": "/app.py" }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}